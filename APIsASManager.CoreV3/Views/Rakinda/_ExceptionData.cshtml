@model APIsASManager.CoreV3.Models.RakindaModel;

<div class="table-responsive">
    <table class="table table-hover table-striped" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(x => x.ListExceptionModel.FirstOrDefault().created)</th>
                <th>@Html.DisplayNameFor(x => x.ListExceptionModel.FirstOrDefault().controller)</th>
                <th>@Html.DisplayNameFor(x => x.ListExceptionModel.FirstOrDefault().action)</th>
                <th>@Html.DisplayNameFor(x => x.ListExceptionModel.FirstOrDefault().exception)</th>
                <th>@Html.DisplayNameFor(x => x.ListExceptionModel.FirstOrDefault().exception_inner)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ListExceptionModel.Count; i++)
            {
                <tr>
                    <td>@(i+1)</td>
                    <td>@Model.ListExceptionModel[i].created</td>
                    <td>@Model.ListExceptionModel[i].controller</td>
                    <td>@Model.ListExceptionModel[i].action</td>
                    <td>@Model.ListExceptionModel[i].exception</td>
                    <td>@Model.ListExceptionModel[i].exception_inner</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<script type="text/javascript">
    $('#myTable').DataTable({
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
        "order": [],
        "columnDefs": [
            { "targets": 'no-sort', "orderable": false }
        ]
    });
</script>